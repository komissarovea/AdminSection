
@model IEnumerable<AdminSection.Models.User>
@{
    ViewBag.Title = "User's list";
}

@*<a asp-action="Create">Create new user</a>*@

<table class="table">
    <tr><th>User name</th><th>E-mail</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>