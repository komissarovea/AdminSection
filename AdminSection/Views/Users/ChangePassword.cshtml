@model AdminSection.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}
<h2>Change password for user '@Model.UserName'</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserName" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Old password</label>
        <input asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input id="myPassword" asp-for="NewPassword" class="form-control" />
    </div>
    <p/>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/strength.js"></script>
<script src="~/js/strengthInit.js"></script>